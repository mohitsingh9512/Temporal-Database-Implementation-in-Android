<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="320dp"
    android:layout_height="match_parent"
    android:padding="5dp">
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="left|center"
        android:text="Name"
        android:textColor="@color/colorPrimary"
        android:id="@+id/name_tv"/>
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center"
        android:text="Address"
        android:layout_toRightOf="@id/name_tv"
        android:textColor="@color/colorPrimary"
        android:id="@+id/address_tv" />

    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="right|center"
        android:text="valid-from"
        android:textColor="@color/colorPrimary"
        android:layout_toRightOf="@id/address_tv"
        android:id="@+id/valid_from_tv" />
    <TextView
        android:layout_width="105dp"
        android:padding="4dp"
        android:layout_height="wrap_content"
        android:gravity="right|center"
        android:text="valid-to"
        android:layout_toRightOf="@id/valid_from_tv"
        android:textColor="@color/colorPrimary"
        android:id="@+id/valid_to_tv" />

</RelativeLayout>